<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="row-fluid">
  <div class="col-sm-5">
    <ul class="list-group">
      <li class="list-group-item">
        <b>Название:</b>
        <%= @organization.title %>
      </li>

      <li class="list-group-item">
        <b>Описание:</b>
        <%= @organization.description %>
      </li>

      <li class="list-group-item">
        <b>Адрес:</b>
        <%= @organization.address %>
      </li>

      <li class="list-group-item">
        <b>Телефон:</b>
        <%= @organization.phone %>
      </li>

      <li class="list-group-item">
        <b>Имейл:</b>
        <%= @organization.email %>
      </li>

      <li class="list-group-item">
        <b>Все теги:</b>
        <%= @organization.all_tags %>
      </li>
      <li class="list-group-item">
        <b>Широта:</b>
        <span id="organization_lat"><%= @organization.latitude %></span>
      </li>

      <li class="list-group-item">
        <b>Долгота:</b>
        <span id="organization_lng"><%= @organization.longitude %></span>
      </li>
    </ul>
  </div>
  <div class="col-sm-7">
    <%= render 'gmap_show' %>
  </div>
</div>


<%= link_to 'Edit', edit_organization_path(@organization), class: 'btn btn-default' %>
<%= link_to 'Back', organizations_path, class: 'btn btn-default' %>
