<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1 class="text-center"><%= t('organizations.index_title') %></h1>

<%= render @organizations %>

<div class="col-sm-12 text-center"><%= paginate @organizations %></div>

<div class="row-fluid">
  <div class="col-sm-12">
    <% if current_user && current_user.admin? %>
        <%= link_to t('organizations.submit'), new_organization_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
