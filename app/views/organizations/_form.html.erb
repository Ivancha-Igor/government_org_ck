<%= form_for(@organization, html: {class: 'form-horizontal new_organization'}) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="col-sm-5">
      <div class="form-group">
        <%= f.label 'Название', for: 'inputTitle', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', id: 'inputTitle', placeholder: 'Название организации' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Описание', for: 'inputDescription', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control', id: 'inputDescription', placeholder: 'Описание' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Адрес', for: 'inputAddress', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :address, class: 'form-control', id: 'inputAddress', placeholder: 'Адрес' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Телефон', for: 'inputPhone', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :phone, class: 'form-control', id: 'inputPhone', placeholder: 'Телефон' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Имейл', for: 'inputEmail', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', id: 'inputEmail', placeholder: 'Имейл' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Все теги', for: 'inputAllTags', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :all_tags, class: 'form-control', id: 'inputAllTags', placeholder: 'Теги через запятую' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Широта', for: 'inputLat', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :latitude, class: 'form-control', id: 'inputLat', placeholder: 'Широта' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Долгота', for: 'inputLng', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :longitude, class: 'form-control', id: 'inputLng', placeholder: 'Долгота' %>
        </div>
      </div>
      <div class="actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Добавить', class: 'btn btn-default' %>
          <%= link_to 'Назад', organizations_path, class: 'btn btn-default'  %>
        </div>
      </div>
    </div>

    <div class="col-sm-7">
      <%= render 'gmap' %>
    </div>
  </div>

<% end %>

