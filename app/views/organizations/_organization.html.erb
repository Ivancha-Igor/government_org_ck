<div class="panel panel-default">
  <div class="panel-body">
      <div class="row-fluid">
        <div class="col-sm-3"><%= organization.title %></div>
        <div class="col-sm-3"><%= organization.address %></div>
        <div class="col-sm-2"><%= organization.phone %></div>
        <div class="col-sm-4">
          <div class="col-sm-12">
            <%= link_to t('buttons.show'), organization, class: 'btn btn-primary' %>
            <% if current_user && current_user.admin? %>
                <%= link_to t('buttons.edit'), edit_organization_path(organization), class: 'btn btn-warning' %>
                <%= link_to t('buttons.delete'), organization, method: :delete, data: { confirm: t('messages.confirm') }, class: 'btn btn-danger' %>

                <% unless organization.comments.empty? %>
                  <%= link_to '#', class: 'btn btn-success disabled' do %>
                    <%= organization.comments.count %>
                  <% end %>
                <% end %>
            <% else %>
                <% unless organization.comments.empty? %>
                  <%= link_to '#', class: 'btn btn-primary disabled' do %>
                    <span class="badge">
                      <%= t('comments.title') %>: <%= organization.comments.count %>
                    </span>
                  <% end %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
