<%= form_for([@organization, @organization.comments.build]) do |f| %>
    <div class="row-fluid">
      <div class="form-group">
        <%= f.label 'Текст', for: 'inputText', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :body, class: 'form-control', id: 'inputText', placeholder: 'Ваш комментарий' %>
        </div>
      </div>
      <div class="actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Добавить', class: 'btn btn-default' %>
        </div>
      </div>
    </div>
<% end %>