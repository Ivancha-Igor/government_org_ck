<%= form_for([@organization, @organization.comments.build], html: {class: 'form-horizontal new_comment'}) do |f| %>
    <%= f.hidden_field :organization_id, value: @organization.id %>
    <%= f.hidden_field :parent_id, value: params[:parent_id] %>
    <div class="row-fluid">
      <div class="form-group">
        <%= f.label 'Текст', for: 'inputText', class: 'col-sm-1 control-label' %>
        <div class="col-sm-11">
          <%= f.text_area :body, class: 'form-control', id: 'inputText', placeholder: 'Ваш комментарий' %>
        </div>
      </div>
      <div class="actions">
        <div class="col-sm-offset-1 col-sm-11">
          <%= f.submit 'Добавить', class: 'btn btn-default' %>
        </div>
      </div>
    </div>
<% end %>