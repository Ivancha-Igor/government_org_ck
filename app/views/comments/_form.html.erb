<%= form_for([@organization, @organization.comments.build], html: {class: 'form-horizontal new_comment'}) do |f| %>
    <%= f.hidden_field :organization_id, value: @organization.id %>
    <%= f.hidden_field :parent_id, value: params[:parent_id] %>
    <% if current_user %>
        <div class="row-fluid">
          <div class="form-group">
            <div class="col-sm-12">
              <div class="col-sm-8">
                <%= f.text_area :body, class: 'form-control', id: 'inputText', placeholder: t('comments.your_comment') %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <div class="col-sm-4">
                <%= f.submit t('buttons.submit'), class: 'btn btn-info', id: 'comment_submit' %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
<% end %>
<script>
    $(document).ready(function() {
        var sweetAlertConfirm = function(event) {
            swal({
                title: '<%= t('comments.modal_success') %>',
                type: 'success',
                timer: 2000,
                showConfirmButton: false
            })
        };
        $('#comment_submit').on('click', sweetAlertConfirm)
    });
</script>