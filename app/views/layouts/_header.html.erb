<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Brand', pages_home_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to t('menu.home'), pages_home_path %></li>
        <li><%= link_to t('menu.org'), organizations_path %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= t('menu.languages.lang') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li class="text-center">
              <%= link_to_unless_current t('menu.languages.ru'), locale: :ru %>
            </li>
            <li class="text-center">
              <%= link_to_unless_current t('menu.languages.uk'), locale: :uk %>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="current"><%= t('menu.current') %>, <%= current_user.name %></li>
          <li><%= link_to t('menu.logout'), sessions_logout_path %></li>
        <% else %>
          <li><%= link_to t('menu.login'), sessions_login_path %></li>
          <li><%= link_to t('menu.registr'), registration_path %></li>
        <% end %>
      </ul>
      <%= form_tag search_path, method: 'get', class: 'navbar-form navbar-right', id: 'live-search-form', autocomlete: 'off' do %>
          <%= text_field_tag :search, params[:search], autocomlete: 'off', autofocus: true, placeholder: t('menu.search'), class: 'form-control', id: 'search' %>
          <%= submit_tag t('menu.search_action'), name: nil, class: 'btn btn-default', id: 'submit-search-query' %>
          <div id="live-search-results" class="">
            <%= render 'layouts/live_search_results' %>
          </div>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
