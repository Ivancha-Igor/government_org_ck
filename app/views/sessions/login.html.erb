<% content_for(:page_title) {t('sessions.title')} %>
<div class="container">
  <% if notice %>
    <div class="col-sm-offset-6 col-sm-6">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <p id="notice" class="panel-title"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>
  <%= form_tag('/sessions', method: :post, html: {class: 'form-horizontal', role: 'form'}) do  %>
      <div class="row-fluid">
        <div class="col-sm-12 form-group">
          <div class="col-sm-1">
            <%= label_tag 'Email', nil, {class: 'control-label', for: 'inputEmail'} %>
          </div>
          <div class="col-sm-6">
            <%= text_field_tag :email, nil, {class: 'col-sm-4 form-control', id: 'inputEmail', placeholder: 'Email'} %>
          </div>
        </div>
        <div class="col-sm-12 form-group">
          <div class="col-sm-1">
            <%= label_tag 'Пароль',nil, {class: 'control-label', for: 'inputPassword'} %>
          </div>
          <div class="col-sm-6">
            <%= password_field_tag :password, nil, {class: 'col-sm-4 form-control', id: 'inputPassword', placeholder: 'Пароль'} %>
          </div>
        </div>
        <div class="form-group col-sm-offset-1 col-sm-11">
          <%= submit_tag t('sessions.submit'), class: 'btn btn-info' %>
        </div>
      </div>
  <% end %>

  <div class="row-fluid">
    <div class="col-sm-12">
      <p class="lead text-center"><%= t('sessions.body') %></p>
      <div class="col-sm-4">
        <%= link_to '/auth/twitter', class: 'btn btn-block btn-lg btn-social btn-twitter social' do %>
            <i class="fa fa-twitter"></i> Twitter
        <% end %>
      </div>
      <div class="col-sm-4">
        <%= link_to '/auth/vkontakte', class: 'btn btn-block btn-lg btn-social btn-vk social' do %>
            <i class="fa fa-vk"></i> VK
        <% end %>
      </div>
      <div class="col-sm-4">
        <%= link_to '/auth/google_oauth2', class: 'btn btn-block btn-lg btn-social btn-google-plus social' do %>
            <i class="fa fa-google-plus"></i> Google+
        <% end %>
      </div>
    </div>
  </div>
</div>
