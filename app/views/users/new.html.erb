<% meta title: t('users.title'),
        robots: 'noindex' %>
<% content_for(:page_title) {t('users.title')} %>
<%= form_for @user, html: {class: 'form-horizontal new_user'} do |f| %>
  <div class="form-group">
     <%= f.label t('users.login'), for:'inputName3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', id: 'inputName3', placeholder: t('users.login') %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Email', for:'inputEmail3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: 'form-control', id: 'inputEmail3', placeholder: 'Email' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Пароль', for:'inputPassword3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control', id: 'inputPassword3', placeholder: 'Пароль' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit t('users.submit'), class: 'btn btn-info' %>
    </div>
  </div>
<% end %>
