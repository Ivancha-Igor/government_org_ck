<%= form_for @user, html: {class: 'form-horizontal new_user'} do |f| %>
  <div class="form-group">
     <%= f.label 'Логин', for:'inputName3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', id: 'inputName3', placeholder: 'Логин' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Имейл', for:'inputEmail3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: 'form-control', id: 'inputEmail3', placeholder: 'Имейл' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Пароль', for:'inputPassword3', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control', id: 'inputPassword3', placeholder: 'Пароль' %>
    </div>
  </div>
  <div class="actions">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit 'Зарегистрироваться', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
